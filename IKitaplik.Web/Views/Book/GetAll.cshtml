@{
    Layout = "_Layout";
}
@model List<Book>
<div class="container mt-5">
    <h2>Kitap Listesi</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-@TempData["MessageType"]">
            @TempData["Message"]
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Barkod</th>
                <th scope="col">Kitap Adı</th>
                <th scope="col">Yazar</th>
                <th scope="col">Kategori</th>
                <th scope="col">Raf No</th>
                <th scope="col">Adet</th>
                <th scope="col">Durum</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
            }
            @foreach (var book in Model ?? new List<Book>())
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@book.Barcode</td>
                    <td>@book.Name</td>
                    <td>@book.Writer</td>
                    <td>@book.Category?.Name</td> <!-- Kategori ismi dinamik olarak gelir -->
                    <td>@book.ShelfNo</td>
                    <td>@book.Piece</td>
                    <td>@(book.Situation ? "Mevcut" : "Mevcut Değil")</td>
                    <td>
                        <a href="/Book/Update/@book.Barcode" class="btn btn-sm btn-warning">Düzenle</a>
                        <a href="/Book/Delete/@book.Barcode" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
                @{
                    count++;
                }
            }
        </tbody>
    </table>

    <a href="/Book/Add" class="btn btn-primary mt-3">Yeni Kitap Ekle</a>
</div>

